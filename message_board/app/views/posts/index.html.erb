<h3>All Posts</h3>

<table class="table table-bordered">
  <thead>
    <tr>
      <td>Title</td>
      <td>Author</td>
      <td>Date posted</td>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post|  %>
      <tr>
        <td>
          <%= post.title %>
        </td>
        <td>
          <%= post.user.email %>
        </td>
        <td>
          <%= post.created_at.to_formatted_s(:short) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table> 

<%= link_to 'New Post', new_post_path, class: "btn btn-sm btn-info" %>
